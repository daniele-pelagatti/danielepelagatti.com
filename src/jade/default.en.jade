include head
body
	div.htmlContent
		div.menu
			div.myName
				a(href="#{ base }") Daniele
			div.mySurname
				a(href="#{ base }") Pelagatti

			nav.socialMenu
				//- a.fontawesome-envelope-alt(title="Send Email" href="http://www.github.com" target="_blank")
				a.fontawesome-info-sign.website-info-button.social-icon(title="About this site" href="#about" ) 
					span About this site
				a.fontawesome-google-plus-sign.social-icon(title="Contact on Google+" href="https://plus.google.com/+DanielePelagatti" target="_blank") 
					span Contact on Google+
				a.fontawesome-twitter-sign.social-icon(title="Follow on Twitter" href="https://twitter.com/redde81" target="_blank") 
					span Follow on Twitter
				a.fontawesome-github-sign.social-icon(title="See GitHub Projects" href="https://github.com/daniele-pelagatti" target="_blank") 
					span See GitHub Projects
				a.fontawesome-linkedin-sign.social-icon(title="Contact on Linkedin" href="http://lnkd.in/BkMX7G" target="_blank") 
					span Contact on Linkedin														
			
			nav.languagesMenu
				h1 Languages
				ul
					each val in languages
						li
							if val.meta.lang == "en"
								a.selected(href=getRelativeLink(val) id=val.meta.lang permalink=val.link) English
							if val.meta.lang == "it"
								a(href=getRelativeLink(val) id=val.meta.lang permalink=val.link) Italiano
			nav.projectsMenu
				h1 Projects
				ul
					each val in links
						li
							if val.link == link
								a.selected(href=getRelativeLink(val) permalink=val.link)=val.meta.title
							else
								a(href=getRelativeLink(val) permalink=val.link)=val.meta.title
		main
			- var layoutStyle = (banner != null || banner != undefined) ?  "background-image:url("+base+banner+")" : "";
			div(class="layout" style=layoutStyle)
				article!=extractVars(content)
				aside#no-webgl-warning 
					h4 WARNING: You are running a simplified version of this site. 
					p
						| In order to view the full version, please use a 
						a(href="http://www.google.com/chrome/") browser with WebGL support 
						| and 
						a(href="http://helpx.adobe.com/creative-suite/kb/update-graphics-driver-windows-7.html") update your graphics card drivers 
						| to the latest version.
				a(href="#no-webgl-warning").fontawesome-warning-sign.no-webgl-warning-button
					span Warning
	div.javascriptContent

	div.fontawesome-remove.close-page
		span Close
	div.fontawesome-reorder.show-menu
		span Menu

	footer#about
		h1 About This site
		p 
			| This site was built thanks to: 
			a(href="http://nodejs.org/") Node.js
			|, 
			a(href="http://compass-style.org/") Compass
			|, 
			a(href="http://jade-lang.com/") Jade
			|, 
			a(href="http://coffeescript.org/") CoffeeScript
			|, 
			a(href="http://threejs.org/") Three.js
			|, 
			a(href="http://jquery.com/") jQuery
			|, 
			a(href="http://underscorejs.org/") underscore.js
			|, 
			a(href="http://www.greensock.com/tweenmax/") TweenMax.js
			|, 
			a(href="http://fgnass.github.io/spin.js/") spin.js
			|, 
			a(href="http://gruntjs.com/") Grunt.js
			|, 
			a(href="http://driven-by-data.net/about/chromajs/#/0") Chroma.js
			|, 
			a(href="http://tools.medialab.sciences-po.fr/iwanthue/index.php") iWantHue
			|, 
			a(href="https://www.google.com/fonts") Google Fonts
			|, 
			a(href="http://weloveiconfonts.com/") WE LOVE ICON FONTS
		p Source code available on 
			a(href="https://github.com/redde81/danielepelagatti.com") GitHub
		a.modal_close(href="#") Close
include tail

</html>