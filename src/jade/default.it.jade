include functions
doctype html
html(lang= lang)
	include head
	body
		div.htmlContent
			menu
				name
					a(href="#{ base }") Daniele
				surname
					a(href="#{ base }") Pelagatti

				nav.socialMenu
					//- a.fontawesome-envelope-alt(title="Send Email" href="http://www.github.com" target="_blank")
					a.fontawesome-info-sign.website-info-button(title="Info sul Sito" href="#about" )
					a.fontawesome-google-plus-sign(title="Contatta in Google+" href="https://plus.google.com/+DanielePelagatti" target="_blank")
					a.fontawesome-twitter-sign(title="Segui su Twitter" href="https://twitter.com/redde81" target="_blank")
					a.fontawesome-github-sign(title="Vedi Progetti GitHub" href="https://github.com/redde81" target="_blank")
					a.fontawesome-linkedin-sign(title="Contatta in Linkedin" href="http://lnkd.in/BkMX7G" target="_blank")
				
				header Lingue
				nav.languagesMenu
					each val in languages
						li
							if val.meta.lang == "it"
								a.selected(href=getRelativeLink(val) id=val.meta.lang permalink=val.link) Italiano
							if val.meta.lang == "en"
								a(href=getRelativeLink(val) id=val.meta.lang permalink=val.link) English
				header Progetti
				nav.projectsMenu
					each val in links
						li
							if val.link == link
								a.selected(href=getRelativeLink(val) permalink=val.link)=val.meta.title
							else
								a(href=getRelativeLink(val) permalink=val.link)=val.meta.title
			main
				if banner != null || banner != undefined
					img.banner(src="#{base}#{banner}")
				article!=extractVars(content)
				div#no-webgl-warning
					h4 ATTENZIONE: Stai visualizzando una versione semplificata di questo sito. 
					p
						| Per vedere la versione completa, utilizzare un 
						a(href="http://www.google.com/chrome/") browser con supporto WebGL 
						| e 
						a(href="http://windows.microsoft.com/it-it/windows-8/find-install-display-drivers") aggiornare i driver della scheda video 
						| all'ultima versione.
				a(href="#no-webgl-warning").fontawesome-warning-sign.no-webgl-warning-button
		div.javascriptContent

		div.fontawesome-remove.close-page
		div.fontawesome-reorder.show-menu
		
