  "compass_output_folder": "src/css",
  "glsl_folder": "src/glsl",
  "glsl_output_file": "src/js/optional/shaders.js",
  "markdown_folder": "src/markdown",
  "jade_folder": "src/jade",
  "default_document": "index.html",
  "js_folder": "src/js",
  "minified_essential_js_file": "public_html/js/essential.min.js",
  "minified_optional_js_file": "public_html/js/optional.min.js",
  "minified_main_css_input_file": "public_html/css/main.css",
  "minified_main_css_file": "public_html/css/main.min.css",
  "config_json": "public_html/config.json"
