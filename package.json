  "scripts": {
    "test": "grunt minify",
    "preinstall": "npm install -g grunt-cli coffee-script jade compass"
  },
  "keywords": [
    "grunt",
    "markdown",
    "jade",
    "compass",
    "threejs"
  ],
  "destination_host": "http://www.danielepelagatti.com",
  "www_folder": "public_html",
  "watch_folder": "src",
  "coffee_folder": "src/coffee",
  "percolator_main": "main.coffee",
  "compiled_js": "src/js/optional/main.js",
